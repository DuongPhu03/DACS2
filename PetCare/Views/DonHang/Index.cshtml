@model List<Donhang>
@{
    Layout = "Admin/_LayoutAdmin";
}

<h2 class="text-center mb-5">Quản Lý Đơn Hàng</h2>

<!-- Công việc thêm: Thêm điều kiện kiểm tra dữ liệu nếu như trống thì in dòng "Không có dữ liệu" -->

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ID Khách Hàng</th>
            <th>Địa chỉ giao hàng</th>
            <th>Tổng Tiền</th>
            <th>Ngày Tạo</th>
            <th>Trạng Thái</th>
            <th>Ghi Chú</th>
            <th>Mã đơn hàng</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donhang in Model)
        {
            <tr>
                <td>@donhang.id_dh</td>
                <td>@donhang.id_kh</td>
                <td>@donhang.diachi_giao</td>
                <td>@donhang.tong_tien</td>
                <td>@donhang.CreateAt</td>
                <td>@donhang.trang_thai</td>
                <td>@donhang.ghi_chu</td>
                <td><a class="form-text" asp-action="Details" asp-route-id="@donhang.id_dh">@donhang.ma_dh</a></td>
                <td style="white-space: nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="DonHang" asp-action="Edit"
                       asp-route-id="@donhang.id_dh">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="DonHang" asp-action="Delete"
                       asp-route-id="@donhang.id_dh" onclick="return confirm('Chắc chắn xóa sản phẩm này?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
