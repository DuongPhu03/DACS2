@model VMHienThiShop

@{
    ViewData["Title"] = "Home";
    Layout = "_LayoutStore";
}

<div class="container-fluid p-0">

    <div class="hero bg-light py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4">Pets Food In The Store</h1>
                    <p class="lead">Find the best quality food for your beloved pets.</p>
                    <a href="/product" class="btn btn-primary btn-lg">Shop Now</a>
                </div>
                <div class="col-md-6">
                    <img src="/assets/thumbnails/cat-and-dog-love-your-pet-day-banner-greeting-card-social-media-pink-background-photo.jpg" alt="Pet Food" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <h2 class="text-center mb-4">Our Categories</h2>
        <div class="row">
            @foreach (var loaisp in Model.loaisps)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="~/assets/loaisp/@loaisp.hinh_anh" class="card-img-top" alt="@loaisp.name">
                        <div class="card-body row">
                            <h5 class="card-title col mt-2">@loaisp.name</h5>
                            <a asp-controller="Shop" asp-action="Category" asp-route-id_loai="@loaisp.id" class="btn btn-primary rounded-pill col">Xem sản phẩm</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="container my-5">
        <h2 class="text-center mb-4">Sản phẩm nổi bật</h2>
        <div class="row">
            @foreach (var sp in Model.sanphams)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="~/assets/sanphams/@sp.hinhanh" class="card-img-top" alt="@sp.ten_sanpham">
                        <div class="card-body">
                            <h5 class="card-title">@sp.ten_sanpham</h5>
                            <p class="card-text">@sp.thanhtien.ToString("N0")đ</p>
                            <a asp-controller="Shop" asp-action="AddToCart" asp-route-productid="@sp.id_sanpham" class="btn btn-primary rounded-pill">Thêm</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
