@model KhachhangDto
@{
    Layout = "_LayoutAccount";
}

<section class="h-100 gradient-form">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="card-body p-md-5 mx-md-4">
                                <form method="post">
                                    <p class="text-center fw-bold">Register an account</p>

                                    <div class="form-outline mb-3">
                                        <label>Tên Khách Hàng</label>
                                        <input class="form-control" asp-for="ten_kh" />
                                        <span asp-validation-for="ten_kh" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label>Địa chỉ Khách Hàng</label>
                                        <input class="form-control" asp-for="diachi_kh" />
                                        <span asp-validation-for="diachi_kh" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label>Số điện thoại Khách Hàng</label>
                                        <input class="form-control" asp-for="sdt_kh" />
                                        <span asp-validation-for="sdt_kh" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label>Mật Khẩu</label>
                                        <input class="form-control" asp-for="matkhau_kh" />
                                        <span asp-validation-for="matkhau_kh" class="text-danger"></span>
                                    </div>

                                    <!-- Xác Nhận Mật Khẩu -->
                                    <div class="form-outline mb-3">
                                        <label class="">Xác Nhận Mật Khẩu</label>
                                            <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" />
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>

                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-primary btn-block w-100 mb-2 mt-4">Sign Up</button>

                                    <div class="text-center pt-1 pb-1">
                                        <input type="checkbox" required /> <a class="text-muted" href="#!">I agree to <u>Terms and Condition</u>s</a>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Already have an account?</p>
                                        <a class="btn btn-outline-danger mx-2" asp-controller="Account" asp-action="Login">Login</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
