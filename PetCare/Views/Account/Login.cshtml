@{
    Layout = "_LayoutAccount";
}
<div class="form-container">
    <div class="mb-3">
        <span class="h4 text-dark text-decoration-none fw-bold" id="loginIn">Đăng nhập tài khoản</span>
    </div>
    <div class="" id="login">
        <form method="post">
            <div class="mb-3">
                <label class="form-label" for="Username">Tên Đăng Nhập</label>
                <input type="text" id="Username" name="Username" class="form-control"
                       placeholder="Phone number or email address" />
            </div>
            <div class="mb-3 position-relative">
                <label class="form-label" for="password">Mật Khẩu</label>
                <input type="password" id="password" name="password" class="form-control"
                       placeholder="Enter Password" />
                <span class="position-absolute top-50 end-0 translate-middle-y me-3">
                    <i class="fas fa-eye"></i>
                </span>
            </div>
            <div class="d-flex align-items-center justify-content-center pb-4 mt-3">
                <a href="#" class="text-decoration-none text-secondary">Quên mật khẩu?</a>
            </div>
            <button type="submit" class="btn btn-dark w-100">LOGIN</button>
            <div class="d-flex align-items-center justify-content-center pb-4 mt-3">
                <p class="mb-0 me-2">Chưa có tài khoản?</p>
                <a class="text-dark text-decoration-none mx-2 fw-fold" asp-controller="Account" asp-action="Register">Tạo mới</a>
            </div>
        </form>
    </div>
</div>
